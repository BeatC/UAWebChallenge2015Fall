doctype html
html
    head
       title Urlaubsglück
       meta(name='viewport' content='width=device-width, initial-scale=1')
       link(rel='stylesheet' href='../css/main.css')
    body
        header.l-header
            .container
                .sign-in
                    a(href='#') Log in
                    a(href='#').is-active Sign up
                .logo-light
                h1.tagline Share your holiday dreams
                h2.description And find the perfect partner to fulfill it
                button.btn-dark Find your holiday partner
        main.l-content
            .container
                section.promo
                    h3.title How Urlaubsglück works?
                section.partners
                    h3.title Meet a partner for your best holiday
                    button.btn See other partners
                section.cards
                    h3.title Discover holiday activity ideas
                    ul
                        li.card
                            h4.title Sport and Activity
                        li.card
                            h4.title Wellnes and Health
                        li.card
                            h4.title Extreme Sports and Expeditions
                        li.card
                            h4.title Games
                        li.card
                            h4.title Culture and Education
                        li.card
                            h4.title Relaxation
                        li.card
                            h4.title Travelling
                section.search-partner
                    h3.title Discover holiday activity ideas
                    h4.description Hi! What are your holiday interests?
                    .search
                        input(type='text' placeholder='Enter your interests').input-control
                        button.btn-dark Search partners
        footer.l-footer
            .container
                .logo
                    span URLAUBSGLÜCK
                nav.links
                    h4.title Company
                    ul
                        li
                            a(href='#') About
                        li
                            a(href='#') Contacts
                        li
                            a(href='#') Press
                        li
                            a(href='#') Blog
                nav.links
                    h4.title Partners
                .design
                    h4.title Designed by
                    .icon-design
